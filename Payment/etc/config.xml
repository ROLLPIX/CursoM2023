<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <rollpix>
                <active>0</active>
                <model>Rollpix\Payment\Model\Method\SplitPayment</model>
                <payment_action>authorize_capture</payment_action>
                <title>Instalments with Rollpix</title>
                <sandbox>0</sandbox>
                <merchant_id/>
                <secret_key backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <sandbox_secret_key backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <in_context>1</in_context>
                <theme>light</theme>
                <debug>0</debug>
                <allowspecific>0</allowspecific>
                <product_widget>1</product_widget>
                <cart_widget>1</cart_widget>
                <summary_widget>1</summary_widget>
                <sort_order>0</sort_order>
            </rollpix>
            <rollpix_pay_now>
                <active>0</active>
                <model>Rollpix\Payment\Model\Method\PayNow</model>
                <payment_action>authorize_capture</payment_action>
                <title>Credit or Debit Card</title>
                <debug>0</debug>
                <allowspecific>0</allowspecific>
                <summary_widget>1</summary_widget>
                <sort_order>0</sort_order>
            </rollpix_pay_now>
        </payment>
    </default>
</config>
